<h1>Analizador de PL0 ampliado usando PEG.js</h1>
<div id="content">
  <p class="loadfile">
    <input type="file" id="examples" />
  </p>
  <p>
  <nav>
  <ul>
    <% programs.each do |p| %>
      <li><a href="<%= p.name %>" <%=current?('/'+p.name)%>><%= p.name %></a></li>
    <% end %>
  </ul>
  </nav>
  <table>
    <tr>
      <td>
        <form action="/save" method="post">
          <textarea id="input" name="input" 
                    autofocus cols = "40" rows = "4">
<%= source %>
          </textarea>
          <br/>
          <label for="saveas">Guardar (m√°x 10 archivos)</label>
          <input id="saveas" type="text" name="fname" 
                 title="name" pattern="\w+" />
        </form>

        <br/>

        <form action="/delete" method="post"> 
          
          <label for="eliminar">Eliminar</label>
          <input id="eliminar" type="text" name="fname" 
                 title="name" pattern="\w+" />
        </form>

      </td>
      <td><button id="parse" type="button">Parsear</button></td>
    </tr>
  </table>
  </p>
  <div class="output">
    <pre>
<span id="output"></span> <!-- Output goes here! --> 
    </pre>
  </div>
</div>
